<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangwei.cms.dao.ChannelDao">
<select id="select" resultType="Channel">
select * from cms_channel
</select>

<select id="selectById" resultType="Channel">
select * from cms_channel where id=#{id}
</select>

<select id="count" resultType="int">
select count(*) from cms_channel
</select>

<insert id="insert">
insert into cms_channel  values(0,#{channel.name},#{channel.description},#{channel.icon},#{channel.sorted})
</insert>

<update id="update">
update cms_channel set name=#{channel.name},description=#{channel.description} where id=#{channel.id}
</update>

<delete id="deleteById">
delete from cms_channel where id=#{id}
</delete>

<delete id="deleteByIds">
delete from cms_channel where id in(${id})
</delete>
</mapper>